---
import { ArrowUp, Twitter, Mail } from 'lucide-astro';

const currentYear = new Date().getFullYear();
---

<footer class="py-12 px-6 border-t border-warm-600/10">
  <div class="max-w-4xl mx-auto">
    <!-- Back to top -->
    <div class="flex justify-center mb-8">
      <a
        href="#hero"
        class="text-warm-500 hover:text-gold-500 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-gold-500 focus-visible:outline-offset-2"
        aria-label="Back to top"
      >
        <ArrowUp class="w-5 h-5" />
      </a>
    </div>

    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Social Links -->
      <div class="flex items-center gap-6">
        <a
          href="https://twitter.com/GoldenFoxLLC"
          target="_blank"
          rel="noopener noreferrer me"
          class="text-warm-500 hover:text-gold-500 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-gold-500 focus-visible:outline-offset-2"
          aria-label="Twitter"
        >
          <Twitter class="w-5 h-5" />
        </a>
        <a
          href="mailto:contact@goldenfox.games"
          class="text-warm-500 hover:text-gold-500 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-gold-500 focus-visible:outline-offset-2"
          aria-label="Email"
        >
          <Mail class="w-5 h-5" />
        </a>
      </div>

      <!-- Legal -->
      <div class="flex flex-col sm:flex-row items-center gap-4 text-sm text-warm-500">
        <span>&copy; {currentYear} Golden Fox LLC</span>
        <span class="hidden sm:inline">â€¢</span>
        <div class="flex items-center gap-4">
          <a href="/privacy" class="hover:text-gold-500 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-gold-500 focus-visible:outline-offset-2">Privacy Policy</a>
          <a href="/terms" class="hover:text-gold-500 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-gold-500 focus-visible:outline-offset-2">Terms</a>
        </div>
      </div>
    </div>
  </div>
</footer>

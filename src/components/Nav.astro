---
import { Info, Gamepad2, Mail, Home } from 'lucide-astro';

const navLinks = [
  { href: '#about', label: 'About', icon: 'info' },
  { href: '#games', label: 'Games', icon: 'gamepad' },
  { href: '#contact', label: 'Contact', icon: 'mail' },
];
---

<!-- Desktop Header (hidden on mobile - bottom nav handles navigation) -->
<header class="nav-header hidden md:block fixed top-0 left-0 right-0 z-50">
  <div class="nav-fade-top" aria-hidden="true"></div>
  <nav class="relative max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="#hero" class="font-heading font-bold text-xl text-warm-50 hover:text-gold-500 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-gold-500 focus-visible:outline-offset-2">
      Golden Fox
    </a>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center gap-8">
      {navLinks.map(({ href, label }) => (
        <li>
          <a
            href={href}
            data-nav-link
            class="nav-link text-sm font-medium uppercase tracking-wider text-warm-400 hover:text-gold-500 transition-colors duration-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-gold-500 focus-visible:outline-offset-2"
          >
            {label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<!-- Mobile Bottom Navigation -->
<nav class="mobile-bottom-nav fixed bottom-0 left-0 right-0 z-50 md:hidden" aria-label="Mobile navigation">
  <div class="nav-fade" aria-hidden="true"></div>
  <div class="nav-container">
    <a href="#hero" data-mobile-nav-link class="nav-item" aria-label="Home">
      <Home class="nav-icon" />
    </a>
    {navLinks.map(({ href, label, icon }) => (
      <a
        href={href}
        data-mobile-nav-link
        class="nav-item"
        aria-label={label}
      >
        {icon === 'info' && <Info class="nav-icon" />}
        {icon === 'gamepad' && <Gamepad2 class="nav-icon" />}
        {icon === 'mail' && <Mail class="nav-icon" />}
      </a>
    ))}
  </div>
</nav>

<style>
  .nav-fade-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 80px;
    background: linear-gradient(to top, transparent 0%, theme('colors.fox.950 / 60%') 40%, theme('colors.fox.950 / 95%') 100%);
    pointer-events: none;
  }

  .mobile-bottom-nav {
    padding-bottom: env(safe-area-inset-bottom);
  }

  .nav-fade {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80px;
    background: linear-gradient(to bottom, transparent 0%, theme('colors.fox.950 / 60%') 40%, theme('colors.fox.950 / 95%') 100%);
    pointer-events: none;
  }

  .nav-container {
    position: relative;
    display: flex;
    justify-content: space-around;
    align-items: center;
    max-width: 280px;
    margin: 0 auto;
    padding: 0.75rem 0;
  }

  .nav-item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem;
    min-width: 44px;
    min-height: 44px;
    text-decoration: none;
  }

  .nav-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: theme('colors.warm.500');
    transition: color 0.2s ease;
  }

  .nav-item:hover .nav-icon {
    color: theme('colors.warm.400');
  }

  .nav-item.active .nav-icon {
    color: theme('colors.gold.500');
  }

  .nav-item:focus-visible {
    outline: 2px solid theme('colors.gold.500');
    outline-offset: 2px;
    border-radius: 0.25rem;
  }
</style>

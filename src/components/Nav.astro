---
import { Menu, X } from 'lucide-astro';

const navLinks = [
  { href: '#about', label: 'About' },
  { href: '#games', label: 'Games' },
  { href: '#contact', label: 'Contact' },
];
---

<header class="nav-header fixed top-0 left-0 right-0 z-50">
  <nav class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="#" class="font-heading font-bold text-xl text-warm-50 hover:text-gold-500 transition-colors">
      Golden Fox
    </a>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center gap-8">
      {navLinks.map(({ href, label }) => (
        <li>
          <a
            href={href}
            data-nav-link
            class="nav-link text-sm font-medium uppercase tracking-wider text-warm-400 hover:text-gold-500 transition-colors duration-300"
          >
            {label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile Menu Toggle -->
    <button
      class="menu-toggle md:hidden p-2 text-warm-300 hover:text-gold-500 transition-colors"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <Menu class="w-6 h-6" />
    </button>
  </nav>
</header>

<!-- Mobile Menu Overlay -->
<div class="mobile-menu fixed inset-y-0 right-0 w-64 bg-fox-900 z-50 md:hidden shadow-2xl">
  <div class="p-6">
    <button
      class="menu-toggle absolute top-4 right-4 p-2 text-warm-300 hover:text-gold-500 transition-colors"
      aria-label="Close menu"
    >
      <X class="w-6 h-6" />
    </button>

    <nav class="mt-12">
      <ul class="space-y-6">
        {navLinks.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class="block text-lg font-medium text-warm-300 hover:text-gold-500 transition-colors"
            >
              {label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</div>

<!-- Mobile Menu Backdrop -->
<div class="mobile-backdrop fixed inset-0 bg-fox-950/80 z-40 hidden md:hidden"></div>

<style>
  .mobile-menu.open ~ .mobile-backdrop {
    @apply block;
  }
</style>

<section id="contact" class="section">
  <div class="container-narrow">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <span class="section-label">Get In Touch</span>
      <h2 class="section-title">Contact Us</h2>
      <p class="text-warm-400 max-w-xl mx-auto">
        Have questions, feedback, or want to collaborate? We'd love to hear from you.
      </p>
    </div>

    <!-- Contact Methods -->
    <div class="grid gap-4 sm:grid-cols-2 max-w-xl mx-auto">
      <!-- Email -->
      <a
        href="mailto:contact@goldenfox.games"
        class="flex items-center gap-3 p-4 card group"
      >
        <div class="w-10 h-10 shrink-0 rounded-sm bg-fox-850 border border-fox-800 flex items-center justify-center text-gold-500 group-hover:border-gold-500/40 transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <div class="min-w-0">
          <p class="text-xs text-warm-400">Email</p>
          <p class="text-warm-50 font-medium text-sm truncate">contact@goldenfox.games</p>
        </div>
      </a>

      <!-- Twitter -->
      <a
        href="https://twitter.com/GoldenFoxLLC"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-3 p-4 card group"
      >
        <div class="w-10 h-10 shrink-0 rounded-sm bg-fox-850 border border-fox-800 flex items-center justify-center text-gold-500 group-hover:border-gold-500/40 transition-all">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </div>
        <div class="min-w-0">
          <p class="text-xs text-warm-400">Twitter / X</p>
          <p class="text-warm-50 font-medium text-sm">@GoldenFoxLLC</p>
        </div>
      </a>
    </div>
  </div>
</section>

---
import { Mail, Twitter } from 'lucide-astro';
---

<section id="contact" class="section">
  <div class="container-narrow">
    <!-- Section Header -->
    <div class="text-center mb-12 reveal">
      <span class="section-label">Get In Touch</span>
      <h2 class="section-title">Contact Us</h2>
      <p class="text-warm-400 max-w-xl mx-auto">
        Have questions, feedback, or want to collaborate? We'd love to hear from you.
      </p>
    </div>

    <!-- Contact Methods -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-8 reveal" style="transition-delay: 150ms;">
      <!-- Email -->
      <a
        href="mailto:contact@goldenfox.games"
        class="inline-flex items-center gap-3 text-warm-300 hover:text-gold-500 transition-colors group focus-visible:outline focus-visible:outline-2 focus-visible:outline-gold-500 focus-visible:outline-offset-2"
      >
        <Mail class="w-5 h-5" />
        <span>contact@goldenfox.games</span>
      </a>

      <!-- Twitter -->
      <a
        href="https://twitter.com/GoldenFoxLLC"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 text-warm-300 hover:text-gold-500 transition-colors group focus-visible:outline focus-visible:outline-2 focus-visible:outline-gold-500 focus-visible:outline-offset-2"
      >
        <Twitter class="w-5 h-5" />
        <span>@GoldenFoxLLC</span>
      </a>
    </div>
  </div>
</section>
